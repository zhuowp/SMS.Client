<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SMS.Client.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Panels/CircularPanel.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Panels/WindowPanel.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Players/PtzController.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Players/RealtimePlayer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Players/Replayer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Players/VideoReplayControlPanel.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Timelines/Timeline.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Timelines/TimelineBand.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tags/TagContainer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tags/IconTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tags/LineTextTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tags/AreaTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tags/VectorTag.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/ComboTree.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/ImageButton.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/ImageRadioButton.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Maps/Tellurion.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Maps/Panorama.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Maps/PlaneMap.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Maps/EagleEye.xaml"/>

        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/HeatMaps/HeatMap.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/HeatMaps/HeatMapLegend.xaml"/>
    </ResourceDictionary.MergedDictionaries>


    <Style TargetType="{x:Type local:TWindow}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
