<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SMS.Client.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/CircularPanel.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/WindowPanel.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/PtzController.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/RealtimePlayer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Replayer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/TagContainer.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/IconTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/LineTextTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/AreaTag.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/ImageButton.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/ImageRadioButton.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Tellurion.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/Panorama.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/PlaneMap.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/EagleEye.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/HeatMap.xaml"/>
        <ResourceDictionary Source="/SMS.Client.Controls;component/Themes/HeatMapLegend.xaml"/>
    </ResourceDictionary.MergedDictionaries>








    <Style TargetType="{x:Type local:VectorTag}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VectorTag}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
